algoritmo "Par ou Impar Função"
var
   N: Inteiro
   R: Caractere

Funcao ParOuImpar(V: inteiro): Caractere
inicio
      Se(V%2 = 0) entao
        Retorne "PAR"
      SeNao
        Retorne "IMPAR"
      FimSe
FimFuncao
   
inicio
      Escreva("Digite um número: ")
      Leia (N)
      R <- ParOuImpar (N)
      EscrevaL("O número", N, " é um valor ", R)
fimalgoritmo