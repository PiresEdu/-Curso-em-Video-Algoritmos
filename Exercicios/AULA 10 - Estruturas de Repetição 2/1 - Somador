algoritmo "Somador"
var
   N, S: Inteiro
   Resp: Caractere
inicio
      S <- 0
      Repita
        Escreva(" Digite o valor: ")
        Leia(N)
        S <- S + N
        Escreva(" Deseja continuar? [S/N]")
        Leia (Resp)
      Ate (Resp = "N")
      EscrevaL(" A soma de todos os valores digitados Ã© = ", S)
