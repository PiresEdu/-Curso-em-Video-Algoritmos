algoritmo "DependentesFuncionários"
var
   Nome: Caractere
   Sal, NSal: Real
   Dep: Inteiro
inicio
      Escreva("Qual o nome do Funcionário? ")
      Leia(Nome)
      Escreva("Qual o salário do(a) ", Nome,"? ")
      Leia(Sal)
      Escreva("Qual a quantiade de dependentes do(a) ", Nome,"? ")
      Leia(Dep)
      Escolha Dep
              Caso 0
                   NSal <- Sal + (Sal*0.05)
              Caso 1, 2, 3
                   NSal <- Sal + (Sal*0.1)
              Caso 4, 5, 6
                   NSal <- Sal + (Sal*0.15)
              OutroCaso
                   NSal <- Sal + (Sal*0.18)
      FimEscolha
      EscrevaL("O novo salário do(a)  ", Nome, " é de R$", Nsal)
      
      
fimalgoritmo